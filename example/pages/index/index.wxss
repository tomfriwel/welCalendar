/**index.wxss**/

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    text-align: center;
    /* line-height: 88rpx; */
    color: #272a14;
    font-size: 36rpx;
    margin: 20rpx 0;
}

.title .style0 {
    font-size: 30rpx;
}

.action-wrap {
    display: flex;
    margin-bottom: 20rpx;
}

.line-wrap {
    display: flex;
    flex-wrap: wrap;
    width: 716rpx;
    /* border-right: 2rpx solid #D6D5D5; *//* border-bottom: 2rpx solid #D6D5D5; */
}

.item {
    width: 100rpx;
    height: 100rpx;
    border-left: 2rpx solid #d6d5d5;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: 400;
    color: #272a14;
    border-bottom: 2rpx solid #d6d5d5;
}

.item.right {
    border-right: 2rpx solid #d6d5d5;
}

.item.top {
    border-top: 2rpx solid #d6d5d5;
}

.item .large {
    font-weight: 500;
    font-size: 32rpx;
}

.item .small {
    font-size: 24rpx;
}

.item.first .small {
    border-bottom: 4rpx solid #ff644e;
}

.item.holiday {
    background: rgba(246, 183, 156, 0.6);
}

.item.holiday .small {
    color: rgb(248, 99, 94);
    font-weight: 500;
}

.item.style1 {
    background: #fff3eb;
}

.item.style2 {
    background: #fae6ac;
}

